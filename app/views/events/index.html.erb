
<h1 class="page_title">Events</h1>

<table>
  <span class="heading">Past Events</span>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.past_events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td class="text_red"><%= event.date %></td>
        <td class="capitalise italic"><%= User.find(event.creator_id).name %></td>
        <td><%= link_to 'Show', event, class: "links" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <span class="heading">Upcoming Events</span>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.upcoming_events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td class="text_green"><%= event.date %></td>
        <td class="capitalise italic"><%= User.find(event.creator_id).name %></td>
        <td><%= link_to 'Show', event , class: "links"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "links"%>

<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p><%= notice %></p>
    <p><%= alert %></p>
    <nav class="nav">

        <% if session[:user_id] %>
         <div>
            <%= link_to session[:user_name], user_path(session[:user_id]), class: "nav_item"%>
            <%= link_to "Events", events_path, class: "nav_item"%>
            <%= link_to "Log Out", session_destroy_path(1), method: :delete, class: "nav_item" %>
          </div>
        <% else %>
          <div>
            <%= link_to "Events", events_path, class: "nav_item"%>
            <%= link_to 'Log In', session_new_path, class: "nav_item"%>
            <%= link_to 'Sign Up', new_user_path, class: "nav_item"%>
           </div>
        <% end %>

    </nav>
    <%= yield %>
  </body>
</html>
